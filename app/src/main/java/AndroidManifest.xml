            android:name=".Diciplinas.Activity_Nova_Disciplina"
            android:label="@string/title_activity_nova__diciplina"
            android:theme="@style/AppTheme.NoActionBar" />
       
        <activity
            android:name=".Notas.Activity_Notas"
            android:label="@string/title_activity_activity__notas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notas.Activity_Notas_add"
            android:label="@string/title_activity_activity__notas_add"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
